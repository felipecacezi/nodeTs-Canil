{{>partials/header}}

{{#banner}}
<section class="banner" style="background-image: url('/images/{{background}}')">{{title}}</section>
<h2>{{title}} disponíveis para adoção</h2>
{{/banner}}

<div class="container list">
    {{#list}}
        <div class="item">
            <img src="/images/{{ image }}" class="item--image" />
            <div class="item--name">{{ name }}</div>
            <div class="item--color">Cor: {{ color }}</div>
            <div class="item--genre">Gênero: {{ sex }}</div>
            <div>
                <a href="/edit-pet/{{ id }}" class="btn-primary">Alterar</a>
                <button data-id="{{ id }}"
                        class="btn-danger btn-delete">Deletar</button>
            </div>
        </div>
    {{/list}}
</div>

{{^list}}
<div class="container no-list">
    <h2>Não há animais disponiveis nessas condições.</h2>
</div>
{{/list}}
<script type="text/javascript" src="./js/deletePet.js"></script>
{{>partials/footer}}